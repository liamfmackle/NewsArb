{
  "name": "newsarb",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "pnpm --filter @newsarb/api db:seed",
    "build:web": "pnpm --filter @newsarb/web build",
    "build:api": "pnpm --filter @newsarb/api db:generate && pnpm --filter @newsarb/api build",
    "start:web": "cd apps/web && pnpm start",
    "start:api": "node apps/api/dist/index.js"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  }
}
